<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ledweb.model.mapper.IUserOperation">
	<resultMap type="User" id="resultListUser">
		<id property="userID" column="UserID" />
		<result property="userName" column="UserName" />
		<result property="phone" column="Phone" />
		<result property="password" column="Password" />
		<result property="address" column="Address" />
		<result property="isDelete" column="IsDelete" />
		<result property="reserve1" column="Reserve1" />
		<result property="reserve2" column="Reserve2" />
		<result property="reserve3" column="Reserve3" />

	</resultMap>

	<select id="selectUserByID" parameterType="int" resultType="User">
		select * from User where UserID = #{userID} and IsDelete = 0
	</select>

	<select id="selectUsers" parameterType="string" resultMap="resultListUser">
		select * from User where UserName like #{userName}
	</select>


	<insert id="addUser" parameterType="User" useGeneratedKeys="true"
		keyProperty="id">
		insert into User(UserName,Phone,Password,Address,Reserve1,Reserve2,Reserve3)
		values(#{userName},#{phone},#{password},#{address},#{reserve1},#{reserve2},#{reserve3})
	</insert>
	
	<update id="updateUser" parameterType="User" >
        update User set 
        UserName=#{userName},
        Phone=#{phone},
        Password=#{password},
        Address=#{address},
        Reserve1=#{reserve1},
        Reserve2=#{reserve2},
        Reserve3=#{reserve3},
        where UserID=#{userID}
    </update>
	
	<delete id="deleteUser" parameterType="int">
         update User set 
        IsDelete=1
        where UserID=#{userID}
    </delete>
	
</mapper>